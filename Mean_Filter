img =imread('C:\Users\Tuba\OneDrive\Masaüstü\ankara.jpg'); 
% Resmi okuma, içeriye alma
imgri=rgb2gray(img); 
% Renkli resmi Gri resme çevirme
imgd=im2double(imgri); 
% Gri resmi çift duyarlılğa dönüştürür yani veri türüne dönüştürür ve çıktırı [0, 1] arasında ölçeklendirir
imgd= imnoise(imgd, 'salt & pepper', 0.02); 
% Resme gürültü ekleme
f= ones(3,3)/9; 
% Gürültülü resme uygulanacak matematiksel filtre girme
img1=filter2(f, imgd); 
% Resme filtre ekleme ( filter2 fonksiyonu ile)

subplot(2,2,1),imshow(img) % Orjinal Resim Görüntüleme
title('Orjinal')
subplot(2,2,2),imshow(imgri) % Gri Resmi Görüntüleme
title('Gri Resim')
subplot(2,2,3),imshow(imgd) % Gürültülü Resmi Görüntüleme
title('Gürültülü')
subplot(2,2,4),imshow(img1) % Filtreli Resmi Grüntüleme
title('Mean Filtreli')
